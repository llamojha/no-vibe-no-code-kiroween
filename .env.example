# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Optional: used only for secure server-side tasks (do not expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Postgres/Database Configuration (Optional - for direct database access)
POSTGRES_URL=your_postgres_connection_url
POSTGRES_USER=your_postgres_user
POSTGRES_HOST=your_postgres_host
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=your_postgres_database
POSTGRES_PRISMA_URL=your_postgres_prisma_url
POSTGRES_URL_NON_POOLING=your_postgres_non_pooling_url


# Feature Flags (set to enable)
# Client-exposed flags use `NEXT_PUBLIC_FF_<FLAG>`

# Enhanced Feature Flags
# Button visibility flags (client-exposed)
NEXT_PUBLIC_FF_ENABLE_CLASSIC_ANALYZER=true
NEXT_PUBLIC_FF_ENABLE_KIROWEEN_ANALYZER=true
NEXT_PUBLIC_FF_ENABLE_SHARE_LINKS=false

# Local development mode now derives from NODE_ENV.
# No separate flag (FF_LOCAL_DEV_MODE/LOCAL_DEV_MODE) is required.

# Environment (development, production, test)
NODE_ENV=development

# E2E Testing Configuration
E2E_BASE_URL=http://localhost:3000
E2E_HEADLESS=true
E2E_TIMEOUT=30000
E2E_SCREENSHOT_ON_FAILURE=true
E2E_VIDEO_ON_FAILURE=false

# Mock Mode Configuration (for testing)
FF_USE_MOCK_API=true                       # Server-side: Enable mock API services in local/test
NEXT_PUBLIC_FF_USE_MOCK_API=true           # Client-side: Show mock mode indicator
FF_MOCK_SCENARIO=success
FF_MOCK_VARIABILITY=false
FF_SIMULATE_LATENCY=false
FF_MIN_LATENCY=500
FF_MAX_LATENCY=2000
FF_LOG_MOCK_REQUESTS=false

# Credit System Configuration
# Controls the credit-based rate limiting system for AI analysis operations
DEFAULT_USER_CREDITS=3                     # Default credits for new users (both free and paid tiers)
ANALYSIS_CREDIT_COST=1                     # Cost per analysis in credits (startup idea or hackathon project)
FF_CREDIT_SYSTEM=true                      # Enable credit-based rate limiting (set to false to disable)

# Document Generation Feature Flag
# Controls AI-powered document generation (PRD, Technical Design, Architecture, Roadmap)
# When enabled, users can generate project documentation from their analyzed ideas
# When disabled, document generation buttons are hidden and API returns 403
NEXT_PUBLIC_FF_ENABLE_DOCUMENT_GENERATION=true  # Client-side: Show document generation buttons
FF_ENABLE_DOCUMENT_GENERATION=true              # Server-side: Allow document generation API requests

# PostHog Analytics Configuration
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com
