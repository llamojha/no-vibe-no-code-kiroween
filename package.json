{
  "name": "idea-analyzer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:properties": "vitest run tests/properties",
    "test:properties:watch": "vitest watch tests/properties",
    "test:properties:coverage": "vitest run tests/properties --coverage && node scripts/generate-property-coverage.cjs",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "E2E_COLLECT_COVERAGE=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report tests/e2e/reports/html",
    "test:e2e:coverage-report": "node scripts/generate-coverage-report.js",
    "playwright:install": "playwright install --with-deps",
    "validate-architecture": "node scripts/validate-architecture.js",
    "validate:mocks": "node scripts/validate-mocks.js",
    "prebuild": "npm run validate-architecture"
  },
  "dependencies": {
    "@google/genai": "^1.28.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.47.6",
    "jspdf": "^3.0.3",
    "next": "^14.2.0",
    "posthog-js": "^1.200.0",
    "posthog-node": "^5.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.181.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.21",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/three": "^0.164.0",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^27.2.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.8.2",
    "vitest": "^2.1.9",
    "wait-on": "^7.2.0"
  }
}
